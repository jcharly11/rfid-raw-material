<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.inventory.list.InventoryListFragment"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:padding="15dp"
        android:gravity="bottom">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inventory_list"
            android:textAlignment="center"
            android:textColor="@color/navy"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="76"
        android:padding="1dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listViewInventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_horizontal|center_vertical">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnStartInventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_hand_held_gun"
                    app:backgroundTint="@color/navy"
                    app:fabCustomSize="100dp"
                    app:maxImageSize="55dp"
                    app:tint="@color/white"></com.google.android.material.floatingactionbutton.FloatingActionButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_horizontal|center_vertical">
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnLogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_log"
                    app:backgroundTint="@color/navy"
                    app:fabCustomSize="100dp"
                    app:maxImageSize="55dp"
                    app:tint="@color/white"></com.google.android.material.floatingactionbutton.FloatingActionButton>
            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>
</LinearLayout>

